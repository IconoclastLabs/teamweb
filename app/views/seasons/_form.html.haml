= simple_form_for [@organization, @season], :html => {:class => 'form-horizontal' } do |f|
  -#= f.error_notification
  - if @season.errors.any?
    %h2= "#{pluralize(@season.errors.count, "error")} prohibited this team from being saved:"
    %ul
      - @season.errors.full_messages.each do |msg|
        %li= msg

  .form-inputs
    = f.input :name, label: "Name for this season"
    = f.input :start, as: :string, input_html: { type: "date"}
    = f.input :end, as: :string, input_html: { type: "date" }
    = f.input :members_allowed, label: "Members allowed?", hint: "Can users join the season without a team?", input_html: { :'data-hide' => '.season_max_members'}
    = f.input :max_members, input_html: { :'data-maxable' => 'no-max'}
    = f.input :teams_allowed, label: "Teams allowed?", hint: "Can users create teams?", input_html: { :'data-hide' => '.season_max_teams, .season_max_team_size'}
    = f.input :max_teams, input_html: { :'data-maxable' => 'no-max'}
    = f.input :max_team_size, input_html: { :'data-maxable' => 'no-max'}

  .form-actions
    %button.btn.btn-info{type: "submit"}
      = icon_tag('thumbs-up') + 'Save'
